<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   <div class="container">
       <div class="row" style="background-color: rgb(106, 223, 255); height: 50px; padding: 10px">
            <div class="col-6">
                <h3>Quán Ăn Vặt Vui Vẻ</h3>
            </div>
           <div class="col-4">
               <h3>Chọn món</h3>
           </div>
           <div class="col-1">
               <h3>Đăng nhập</h3>
           </div>
           <div class="col-1">
               <h3>Đăng ký</h3>
           </div>
       </div>
       <div class="row" style="background-color: rgb(128, 128, 128); height: 50px">
           <div class="col-6">

           </div>
           <div class="col-6" style="float: left; display: flex;">
               @Html.Action("_Category")
           </div>
       </div>
       
      


       <div>
           @RenderBody()
       </div>
   </div>
</body>
</html>

