
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body class="container">
    <div class="container w-25" style="border: 1px solid; border-radius: 10px">
        <form method="post" action="YourInfor">
            <h3 align="center">ĐĂNG NHẬP</h3>
            <div class="mb-3">
                <label class="form-label">UserName</label>
                <input type="text" class="form-control" name="username" />

            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="password" />

            </div>
            <div class="mb-3">
                <label class="form-label">ReType Password</label>
                <input type="password" class="form-control" name="retypePassword" />

            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="rememberPW" value="true" id="checkPW"/>
                <label class="form-check-label" for="checkPW">Remember Password</label>

            </div>
            <button class="btn btn-primary w-100 mb-3" type="submit">Đăng nhập</button>

        </form>

    </div>

</body>
</html>


