@model List<Bai05.Models.Book>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
    <h2 class="text-center mb-4">BOOK LIST</h2>

    <div class="text-end mb-3">
        @Html.ActionLink("Thêm sách mới", "Index", "Book", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã Sách</th>
                <th>Tên Sách</th>
                <th>Giá</th>
                <th>Ảnh Bìa</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var book in Model)
                {
                    <tr>
                        <td>@book.bookID</td>
                        <td>@book.bookName</td>
                        <td>@book.price.ToString("N0") VNĐ</td>
                        <td>
                            @if (!string.IsNullOrEmpty(book.ImageUrl))
                            {
                                <img src="@Url.Content(book.ImageUrl)" width="80" height="120" class="img-thumbnail" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Chưa có sách nào trong danh sách</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        @Html.ActionLink("Quay lại trang nhập", "Index", "Book", null, new { @class = "btn btn-primary" })
    </div>
</body>
</html>