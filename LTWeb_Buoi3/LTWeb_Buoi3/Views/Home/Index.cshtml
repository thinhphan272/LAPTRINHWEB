@{
    ViewBag.Title = "Home Page";
}
@model LTWeb_Buoi3.Models.Information


<div class="container w-50">
    <h2>ENTER INFORMATION TO REGIST AN COURSE</h2>
    <div>
        <div class="bg-light">
            <p>Identificate Information</p>
        </div>
        @using (Html.BeginForm("MHXacNhan", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="FullName" class="form-control" />
                <p>Nhập họ tên đầy đủ. Capital từng từ</p>
            </div>
            <div class="mb-3">
                <label class="form-label">ID Student</label>
                <input type="text" name="IdStudent" class="form-control" />

            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" />

            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">File Image Input</label>
                <input class="form-control" type="file" name="File" id="formFile">
            </div>
            <div class="mb-3">
                <label class="form-label">Note</label>
                <textarea class="form-control" name="Note"rows="3"></textarea>

            </div>
            <div class="mb-3">
                <label class="form-label">We are Known by</label>
                <div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Check1" value="true" id="checkTV" />
                        <label class="form-check-label" for="checkTV">
                            Television
                        </label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Check2" value="true" id="checkWeb" />
                        <label class="form-check-label" for="checkWeb">
                            Website
                        </label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Check3" value="true" id="checkNP" />
                        <label class="form-check-label" for="checkNP">
                            Newspaper
                        </label>

                    </div>
                </div>

            </div>
            <div class="mb-3">
                <label class="form-label">Choose Work Study</label>
                <div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ChooseWorkTime" id="MN246" value="Morning(2-4-6)" />

                        <label class="form-check-label" for="MN246">Morning(2 - 4 - 6)</label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ChooseWorkTime" id="AFT246" />

                        <label class="form-check-label" for="AFT246">Afternoon(2 - 4 - 6)</label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ChooseWorkTime" id="MN357" />

                        <label class="form-check-label" for="MN357">Morning(3 - 5 - 7)</label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ChooseWorkTime" id="AFT357" />

                        <label class="form-check-label" for="AFT357">Afternoon(3 - 5 - 7)</label>

                    </div>

                </div>

            </div>
            <div class="mb-3">
                <label class="form-label">Select an course</label>
                @Html.DropDownList("SelectCourse", (SelectList)ViewBag.LCourse, "---Chọn lớp---", new { @class = "form-control" })

            </div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </div>
        }

    </div>


</div>

