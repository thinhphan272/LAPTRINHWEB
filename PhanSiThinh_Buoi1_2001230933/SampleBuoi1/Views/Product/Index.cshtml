@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_LayoutPage.cshtml";
}

@model List<SampleBuoi1.Models.Product>

<div class="container">
    <h3 style="margin-top: 20px">SẢN PHẨM TIÊU BIỂU</h3>

    <!-- Hàng 1-->
    <div class="container text-center">
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-3  col-sm-6 mb-2">
                        <div class="card" style="width: 12rem; ">
                            <img src="@item.imageURL" height="200px" class="card-img-top" alt="Hoa cưới 1" />

                            <div class="card-body">
                                <h5 class="card-title">@item.title</h5>
                                <p class="card-text">Giá: <span style="color: red">@item.price.ToString("N0")</span></p>
                                <a href="#" class="btn btn-primary w-100">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                }
            }
            
        </div>
    </div>


</div>

