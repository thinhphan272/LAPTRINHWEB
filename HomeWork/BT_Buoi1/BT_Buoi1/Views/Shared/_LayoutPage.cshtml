
@{
    ViewBag.Title = "_LayoutPage";
}

<!DOCTYPE html>
<html>  
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!--Nơi nhúng CSS-->
</head>
<body>
    <div class="container" align="center">
        <header>
            <img src="~/Content/Image/banner3.png" />

        </header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" >
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Liên hệ</a>
                        </li>

                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>

        <div class="body-content" style="float: right">
            @RenderBody();

        </div>
        
        <div class="menu-left mt-2" style="width: 250px; float: left">
            <div class="row" >
                <div class="col">
                    <div class="list-group" align="left" style="background-color: rgb(0, 144, 159)">
                        <a href="#" class="list-group-item list-group-item-action active" aria-current="true" style="background-color: rgb(0, 144, 159); border:none; font-weight: bold">
                            DANH MỤC SẢN PHẨM
                        </a>
                        <a href="#" class="list-group-item list-group-item-action" style="color: rgb(0, 143, 238)">Mái xếp</a>

                        <a href="#" class="list-group-item list-group-item-action" style="color: rgb(0, 143, 238); margin-top: 2px">Mái che</a>

                        <a href="#" class="list-group-item list-group-item-action" style="color: rgb(0, 143, 238); margin-top: 2px">Mái vòm</a>

                        <a href="#" class="list-group-item list-group-item-action" style="color: rgb(0, 143, 238); margin-top: 2px">Mái hiên di động</a>
                    </div>
                </div>

            </div>
            <div class="row mb-2">
                <div class="col">

                    <div class="card" align="left">
                        <p class="card-header" style="background-color: rgb(0, 144, 159); border:none; font-weight: bold; color: white">HỖ TRỢ TRỰC TRUYẾN</p>
                        <div class="card-body " style="height: 50px">

                        </div>
                    </div>
                </div>

            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="card" align="left">
                        <p class="card-header" style="background-color: rgb(0, 144, 159); border:none; font-weight: bold; color: white">THỐNG KÊ TRUY CẬP</p>
                        <div class="card-body " >
                            <p class="card-text">Số người truy cập: 87<br />
                            Số người online: 10<br />
                            Số lượng thành viên: 46
                            </p>
                        </div>
                    </div>
                </div>

            </div>


        </div>



    </div>
</body>
</html>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
